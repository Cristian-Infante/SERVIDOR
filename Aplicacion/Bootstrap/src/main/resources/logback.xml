<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Variables de configuración -->
    <springProfile name="!test">
        <property name="LOG_LEVEL" value="${log.level:-INFO}"/>
        <property name="LOKI_URL" value="${loki.url:-http://localhost:3100}"/>
        <property name="SERVER_ID" value="${server.id:-unknown}"/>
        <property name="SERVER_PORT" value="${server.port:-5000}"/>
    </springProfile>

    <!-- Appender para consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para archivo -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/servidor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/servidor.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para Loki -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>${LOKI_URL}/loki/api/v1/push</url>
            <connectionTimeoutMs>30000</connectionTimeoutMs>
            <requestTimeoutMs>5000</requestTimeoutMs>
        </http>
        <format>
            <label>
                <pattern>server=${SERVER_ID},port=${SERVER_PORT},level=%level,logger=%logger{20}</pattern>
            </label>
            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg %ex</pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
        <batchSize>1000</batchSize>
        <batchTimeoutMs>10000</batchTimeoutMs>
    </appender>

    <!-- Configuración de loggers por paquete -->
    <logger name="com.arquitectura" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="LOKI"/>
    </logger>

    <!-- Logger específico para métricas (opcional, nivel más bajo) -->
    <logger name="com.arquitectura.servicios.metrics" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="LOKI"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="LOKI"/>
    </root>
</configuration>