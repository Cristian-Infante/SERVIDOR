# Variables de entorno para desarrollo local
# Copiar este archivo a .env y modificar según sea necesario

# Configuración de MySQL (externo al contenedor)
MYSQL_HOST=host.docker.internal
MYSQL_PORT=3306
MYSQL_DATABASE=databasemensajeria
MYSQL_USERNAME=root
MYSQL_PASSWORD=root

# Configuración de Java
JAVA_OPTS=-Xmx512m -Xms256m

# Puertos del servidor (mapeo host:contenedor)
CHAT_SERVER_PORT=5000
METRICS_PORT=5100
P2P_PORT=6000
REST_API_PORT=8089

# Puertos de monitoreo
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Configuración de Grafana
GRAFANA_ADMIN_PASSWORD=admin123